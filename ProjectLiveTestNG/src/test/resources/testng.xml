<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="My Suite Files">
<groups>
	<run>
	<include name="smoke"></include>
	<include name="regression"></include>
	</run>
</groups>
<parameter name="browser" value="chrome"></parameter>
<parameter name="browsers" value="chrome,firefox,ie"></parameter>
<parameter name="browsergroup1" value="firefox"></parameter>
<parameter name="browsergroup2" value="ie"></parameter>
<listeners>
	<listener class-name="listener.CustomListeners"/>
</listeners>
<suite-files>
<suite-file path="suitea.xml"></suite-file>
<suite-file path="suiteb.xml"></suite-file>
<suite-file path="suitec.xml"></suite-file>
<suite-file path="suiteseleniumbasics.xml"></suite-file>
</suite-files>

</suite> <!-- Suite -->